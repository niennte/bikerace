<nav aria-label="Page navigation for a collection of results">
  <ul class="pagination pagination-lg justify-content-center">

    <li class="page-item <%= css_disabled(!collection.has_previous_page) %>">
      <a class="page-link" href="?page=<%= collection.page - 1 %>" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>

    <% collection.pages.times do |page| %>

    <li class="page-item <%= css_active(collection.page == page + 1) %>">
      <%= link_to (page + 1).to_s, { page: page + 1 }, :class => "page-link" %>
    </li>

    <%  end %>

    <li class="page-item  <%= css_disabled(!collection.has_next_page) %>">
      <a class="page-link" href="?page=<%= collection.page + 1 %>" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>

  </ul>
</nav>