<section class="py-5 container" id="riders">

  <h1>Riders</h1>

  <table class="table table-bordered table-striped">
    <thead class="thead-light">
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>City of Origin</th>
    </tr>
    </thead>

    <tbody>
    <% @riders.each do |rider| %>
        <% rider.extend(RiderView) %>
        <tr>
          <td><%= rider.id %></td>
