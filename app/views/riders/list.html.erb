<p id="notice"><%= notice %></p>
<section class="py-5 container">

  <h1>Riders</h1>

  <table class="table table-bordered">
    <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>City of Origin</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @riders.each do |rider| %>
        <% rider.extend(RiderView) %>
        <tr>
          <td><%= rider.full_name %></td>
          <td><%= rider.city_of_origin %></td>
          <td><%= rider.current_location %></td>
          <td><%= link_to 'Show', rider %></td>
          <td><%= link_to 'Edit', edit_rider_path(rider) %></td>
          <td><%= link_to 'Destroy', rider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Rider', new_rider_path %>
</section>